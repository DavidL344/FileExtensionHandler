<ui:ContentDialog x:Class="FileExtensionHandler.Wpf.Dialogs.ClassicDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:FileExtensionHandler.Wpf.Dialogs"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  mc:Ignorable="d"
                  Title="Preview"
                  PrimaryButtonText="Yes"
                  SecondaryButtonText="No"
                  CloseButtonText="Cancel"
                  DefaultButton="Primary"
                  Closing="ContentDialog_Closing">
    <ui:SimpleStackPanel Spacing="10">
        <TextBlock x:Name="tb_text" Text="Preview TextBlock Text" TextWrapping="Wrap"/>
        <CheckBox x:Name="chk_box" Content="Preview Checkbox Text"/>
    </ui:SimpleStackPanel>
</ui:ContentDialog>
