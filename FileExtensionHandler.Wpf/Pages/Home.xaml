<Page x:Class="FileExtensionHandler.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileExtensionHandler.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Welcome to fexth!" FontSize="16" TextAlignment="Center" Margin="0, 0, 0, 20"/>
        <TextBlock x:Name="txt_instructions" Grid.Row="1" FontSize="14" TextAlignment="Center"/>
        <Button x:Name="btn_newAssociations" Grid.Row="2" Content="Generate file associations" Visibility="Collapsed" HorizontalAlignment="Center" Margin="10" Click="SaveSamplesToDisk"/>
        <Button x:Name="btn_openAppDir" Grid.Row="2" Content="Open application data directory" HorizontalAlignment="Center" Margin="10" Click="OpenAppDataDir"/>
    </Grid>
</Page>
